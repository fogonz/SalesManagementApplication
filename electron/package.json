{
  "name": "mi-app-desktop",
  "private": true,
  "version": "1.0.0",
  "description": "Aplicaci√≥n de escritorio para REPOWebStock que integra React (Vite/TSX), Django y MySQL",
  "author": "Tu Nombre <tu.email@ejemplo.com>",
  "type": "module",
  "main": "main.cjs",
  "scripts": {
    "dev": "vite",
    "build:frontend": "cd ../frontend/react-app && npm run build",
    "start": "npm run build:frontend && electron .",
    "dist": "npm run build:frontend && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/material": "^7.1.1",
    "@mui/styled-engine-sc": "^7.1.1",
    "axios": "^1.9.0",
    "electron-updater": "^6.6.2",
    "framer-motion": "^12.18.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.1",
    "react-virtualized-auto-sizer": "^1.0.26",
    "react-window": "^1.8.11",
    "react-window-infinite-loader": "^1.0.10",
    "recharts": "^2.15.3",
    "router-dom": "^3.0.3",
    "styled-components": "^6.1.18"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/babel__core": "^7.20.5",
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/react-window": "^1.8.8",
    "@vitejs/plugin-react": "^4.4.1",
    "electron": "^26.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  },
  "build": {
    "appId": "com.miempresa.miapp",
    "productName": "MiAppDesktop",
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "directories": {
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from": "../frontend/react-app/dist",
        "to": "frontend/react-app/dist"
      },
      {
        "from": "../backend",
        "to": "backend"
      }
    ],
    "publish": [
      {
        "provider": "github"
      }
    ]
  },
  "homepage": "https://github.com/fogonz/SalesManagementApplication",
  "repository": {
    "type": "git",
    "url": "https://github.com/fogonz/SalesManagementApplication.git"
  }
}
